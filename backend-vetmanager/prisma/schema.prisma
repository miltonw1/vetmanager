generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int               @id @default(autoincrement())
  email         String            @unique
  name          String?
  passwords     Password[]
  clients       Client[]
  pets          Pet[]
  pet_histories PetHistory[]
  pet_images    PetHistoryImage[]
  races         Race[]
  species       Species[]
  debt_logs     DebtLog[]
}

model Password {
  id         Int      @id @default(autoincrement())
  user_id    Int
  body       String
  created_at DateTime @default(now())
  version    String?
  user       User     @relation(fields: [user_id], references: [id])
}

model Client {
  id       Int       @id @default(autoincrement())
  user_id  Int
  name     String
  phone    String
  email    String?
  address  String?
  city     String?
  debt     String?
  user     User      @relation(fields: [user_id], references: [id])
  debt_log DebtLog[]
  pets     Pet[]
}

model DebtLog {
  id            Int      @id @default(autoincrement())
  client_id     Int
  user_id       Int
  previous_debt String
  new_debt      String
  created_at    DateTime @default(now())
  client        Client   @relation(fields: [client_id], references: [id])
  user          User     @relation(fields: [user_id], references: [id])
}

model Pet {
  id          Int          @id @default(autoincrement())
  user_id     Int
  name        String
  allergies   String?
  genre       Genre?
  birthday    DateTime?
  blood_type  String?
  life_status LifeStatus   @default(ALIVE)
  race_id     Int?
  client_id   Int
  species_id  Int
  weight      Decimal?
  user        User         @relation(fields: [user_id], references: [id])
  owner       Client       @relation(fields: [client_id], references: [id])
  race        Race?        @relation(fields: [race_id], references: [id])
  species     Species      @relation(fields: [species_id], references: [id])
  histories   PetHistory[]
}

model PetHistory {
  id          Int               @id @default(autoincrement())
  user_id     Int
  pet_id      Int
  diagnostic  String
  observation String?
  weight      Decimal?
  created_at  DateTime          @default(now())
  user        User              @relation(fields: [user_id], references: [id])
  pet         Pet               @relation(fields: [pet_id], references: [id])
  images      PetHistoryImage[]
}

model PetHistoryImage {
  id             Int        @id @default(autoincrement())
  user_id        Int
  pet_history_id Int
  image_src      String?
  image_url      String?
  user           User       @relation(fields: [user_id], references: [id])
  pet_history    PetHistory @relation(fields: [pet_history_id], references: [id])
}

model Race {
  id         Int     @id @default(autoincrement())
  user_id    Int
  name       String
  species_id Int
  user       User    @relation(fields: [user_id], references: [id])
  pets       Pet[]
  species    Species @relation(fields: [species_id], references: [id])
}

model Species {
  id      Int    @id @default(autoincrement())
  user_id Int
  name    String
  user    User   @relation(fields: [user_id], references: [id])
  pets    Pet[]
  races   Race[]
}

enum Genre {
  MALE
  FEMALE
}

enum LifeStatus {
  DEAD
  ALIVE
}
